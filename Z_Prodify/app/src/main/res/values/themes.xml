<resources>
    <!-- Base application theme. -->
    <style name="Theme.Prodify" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black200</item>
        <item name="colorPrimaryVariant">@color/black500</item>
        <item name="colorOnPrimary">@color/offwhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black200</item>
        <item name="colorSecondaryVariant">@color/black500</item>
        <item name="colorOnSecondary">@color/black600</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black500</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/Montserrat_SemiBold</item>
<!--        <item name="android:background">@color/offwhite</item>-->
    </style>

    <style name="Theme.ProdifyPredict" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black200</item>
        <item name="colorPrimaryVariant">@color/black500</item>
        <item name="colorOnPrimary">@color/offwhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black200</item>
        <item name="colorSecondaryVariant">@color/black500</item>
        <item name="colorOnSecondary">@color/black600</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black500</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/Montserrat_SemiBold</item>
        <!--        <item name="android:background">@color/offwhite</item>-->
    </style>

    <style name="Montserrat_SemiBold" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/monsemibold</item>
    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>